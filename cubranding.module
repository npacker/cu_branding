/**
 * Implements hook_block_info().
 */
function cubranding_block_info() {
  $blocks = array();

  $blocks['cuheader_block'] = array(
    'info' => 'CU Header',
    'cache' => DRUPAL_CACHE_PER_ROLE,
    'status' => 1,
    'region' => 'header',
    'weight' => -100,
    'visibility' => BLOCK_VISIBILITY_NOTLISTED,
  );

  $blocks['cufooter_block'] = array(
    'info' => 'CU Footer',
    'cache' => DRUPAL_CACHE_PER_ROLE,
    'status' => 1,
