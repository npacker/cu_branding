  $themes = array();

  $themes['cuheader'] = array(
    'template' => 'template/cuheader',
    'variables' => array(
      'cuheader_site_name' => NULL,
      'cuheader_image_path' => NULL,
      'cuheader_image_width' => NULL,
			'cuheader_submit_image_path' => NULL,
      'cuheader_color_scheme' => NULL,
    ),
